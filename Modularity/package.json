{
    "name": "@helsingborg-stad/modularity",
    "version": "6.90.35",
    "description": "Modular component system for WordPress",
    "browserslist": [
        "> 1%",
        "not dead"
    ],
    "files": [
        "dist/"
    ],
    "devDependencies": {
        "@biomejs/biome": "2.3.5",
        "@types/jest": "^30.0.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "ts-jest": "^29.4.5",
        "typescript": "^5.9.2",
        "vite": "^7.1.2",
        "vite-config-factory": "^1.0.1",
        "sass-embedded": "^1.93.3",
        "@helsingborg-stad/openstreetmap": "^0.45.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "transform": {
            "^.+\\.(js|ts)$": "ts-jest"
        },
        "collectCoverageFrom": [
            "source/**/*.js",
            "source/**/*.ts"
        ],
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "testMatch": [
            "**/*.test.(js|ts)"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!(.*\\.mjs$))"
        ]
    },
    "scripts": {
        "test": "jest --coverage --maxWorkers=50%",
        "dev": "vite",
        "build": "vite build",
        "build:dev": "vite build --mode development",
        "watch": "vite build --watch --mode development",
        "format": "npx biome format ./source",
        "format:write": "npx biome format ./source --write",
        "lint": "npx biome lint ./source",
        "lint:write": "npx biome lint ./source --write"
    },
    "author": "Kristoffer Svanmark",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/helsingborg-stad/modularity.git"
    }
}