{
 "compilerOptions": {
      "allowJs": true,
      "checkJs": false,
      "target": "es6",
      "module": "commonjs",
      "useDefineForClassFields": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "jsx": "react-jsx",
      "skipLibCheck": true,
      "lib": [
        "ES2021",
        "DOM",
        "DOM.Iterable",
      ]
  },
  "include": [
    "source/js/**/*",
    "library/**/*"
  ]
}