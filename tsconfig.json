{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2021.String"
    ]
  },
  "include": [
    "assets/source/**/*",
    "node_modules/@helsingborg-stad/styleguide/source/js/**/*",
  ],
  "exclude": [
    "node_modules/@helsingborg-stad/styleguide/**/*.test.ts",
    "node_modules/@helsingborg-stad/styleguide/**/*.test.js",
  ]
}
